{
  "name": "md-edit",
  "version": "0.1.0",
  "description": "Markdown 文本编辑器",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir",
    "dist": "electron-builder --win --publish never"
  },
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.md-edit.app",
    "productName": "md-edit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "pack/electron/icon/icon.jpg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "md-edit",
      "include": "build/installer.nsh",
      "installerIcon": "pack/electron/icon/icon.jpg",
      "uninstallerIcon": "pack/electron/icon/icon.jpg",
      "installerHeaderIcon": "pack/electron/icon/icon.jpg"
    }
  },
  "devDependencies": {
    "electron": "37.3.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "mammoth": "^1.11.0",
    "marked": "^12.0.0",
    "turndown": "^7.2.2"
  }
}
